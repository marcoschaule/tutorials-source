/* ******************************************************************************** */
/* Tutorials result
/* ******************************************************************************** */

.tutorials-result
  background-color #2d2d2d
  box-sizing border-box
  margin 0 0 1.4rem 0
  padding 15px 20px
  position relative

.tutorials-result *
  -webkit-border-radius 0
  -moz-border-radius 0
  border-radius 0

.tutorials-result .scrollable
  overflow-y scroll

.tutorials-result [class*="box"]
  opacity .8

.tutorials-result .box-green
  background-color lightgreen
.tutorials-result .box-blue
  background-color lightskyblue
.tutorials-result .box-red
  background-color lightcoral
.tutorials-result .box-orange
  background-color lightsalmon
