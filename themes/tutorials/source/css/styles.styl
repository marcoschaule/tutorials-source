// define charset for css files
@charset "UTF-8"

// import fonts from GoogleFonts
@import url('https://fonts.googleapis.com/css?family=Lato:400,900|Merriweather:300|Source+Code+Pro')

// *****************************************************************************
// Common tags
// *****************************************************************************

*
  border-radius 4px
  color #333
  font-family 'Merriweather', serif
  font-weight 300

html
  font-size 20px
  line-height 1.5

h1, h1 *
  font-family 'Lato', sans-serif
  font-weight bold
  font-size 3rem
  margin-bottom 2rem
  text-align center

h1:hover, h1:hover *
  color #0076df

h2, h2 *, h3, h3 *, h4, h4 *
  font-family 'Lato', sans-serif
  font-weight bold

h1, h2, h3, h4, h5, h6
  margin-top 1em

ul a, ol a, p a
  color #0076df
  text-decoration underline

ul a:hover, ol a:hover, p a:hover
  color inherit

hr
  background-color #ccc
  border none
  height 2px
  margin 2rem auto
  width 4rem

// *****************************************************************************
// Common classes
// *****************************************************************************

.columns-3
  -webkit-column-count 3
  -moz-column-count 3
  column-count 3
  -webkit-column-gap 4rem
  -moz-column-gap 4rem
  column-gap 4rem

// *****************************************************************************
// Header
// *****************************************************************************

#header
  text-align center

#title
  margin 4rem 0 1rem 0
  a
    color inherit
    font-family 'Lato', sans-serif
    font-size 4rem
    font-weight bold
    line-height 1em

#subtitle
  color #666
  margin-bottom 4rem

// *****************************************************************************
// Naviation
// *****************************************************************************

#navigation
  text-align center
  margin-bottom 6rem
  a
    border-left 1px solid #e4e4e4
    color inherit
    padding .5rem 2rem
    text-decoration none
    &:first-child
      border-left none

#navigation a:hover,
#navigation a.active
  background-color #e4e4e4

// *****************************************************************************
// Footer
// *****************************************************************************

#footer
  margin-top 4rem
  text-align center

// *****************************************************************************
// Posts
// *****************************************************************************

.post-date
  color #aaa
  font-style italic
  text-align center
