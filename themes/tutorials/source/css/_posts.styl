// *****************************************************************************
// Post previews
// *****************************************************************************

.post-preview
  margin-bottom 4rem
  .post-preview-date
    margin 0
    color #999
  .post-preview-title
    margin-top 0
  .post-preview-category
    font-family 'Merriweather', serif
    font-size .6em
    margin-left .25rem
    *
      font-weight normal
    .post-preview-bullet
      color #999
    .post-preview-link
      color #555

.post-preview-group
  display none
.post-preview-group.active
  display block 

// *****************************************************************************
// Posts
// *****************************************************************************

.post-date
  color #aaa
  font-style italic
  text-align center
